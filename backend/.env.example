# Configuração do Servidor
PORT=3001
NODE_ENV=development

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/pomodash
MONGODB_TEST_URI=mongodb://localhost:27017/pomodash_test

# JWT
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_min_32_caracteres
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=sua_chave_refresh_muito_segura_aqui_min_32_caracteres
JWT_REFRESH_EXPIRE=30d

# OAuth2 Google (Opcional)
GOOGLE_CLIENT_ID=seu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_google_client_secret_aqui

# Configurações de Email (para futuras funcionalidades)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app_gmail

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload de Arquivos (para futuras funcionalidades)
MAX_FILE_SIZE=5242880

# Logs
LOG_LEVEL=info